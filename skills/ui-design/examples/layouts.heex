        <div>
          <p class="font-semibold text-lg text-slate-900 dark:text-white">My App</p>
          <p class="text-xs text-slate-500 dark:text-slate-400">Application Tagline</p>
        </div>
      </div>
    </div>

    <%!-- Navigation --%>
    <div class="px-6 py-4 border-b border-slate-200 dark:border-slate-700">
      <nav>
        <ul class="space-y-1">
          <li>
            <a href="/dashboard" class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-white bg-rose-500 rounded-lg">
              <.icon name="hero-home" class="size-4" /> Dashboard
            </a>
          </li>
          <li>
            <a href="/resources" class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 rounded-lg dark:text-slate-400 dark:hover:bg-slate-800">
              <.icon name="hero-circle-stack" class="size-4" /> Resources
            </a>
          </li>
          <li>
            <a href="/settings" class="flex items-center gap-3 px-3 py-2 text-sm font-medium text-slate-600 hover:bg-slate-100 rounded-lg dark:text-slate-400 dark:hover:bg-slate-800">
              <.icon name="hero-cog-6-tooth" class="size-4" /> Settings
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <%!-- Flexible content area --%>
    <div class="flex-1 overflow-y-auto">
      <%!-- Dynamic content --%>
    </div>

    <%!-- User profile (sticky at bottom) --%>
    <div class="border-t border-slate-200 dark:border-slate-700 px-6 py-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-full bg-slate-600 text-white flex items-center justify-center text-sm font-medium">
          JD
        </div>
        <div class="flex-1 min-w-0">
