<%!-- ========================================
     NAVBAR LAYOUT
     ======================================== --%>

<%!-- Basic navbar --%>
<nav class="flex items-center justify-between px-6 py-4 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-700">
  <div class="flex-1">
    <a href="/" class="text-xl font-bold text-slate-900 dark:text-white">My App</a>
  </div>
  <div class="flex items-center gap-6">
    <a href="/dashboard" class="text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white">Dashboard</a>
    <a href="/resources" class="text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white">Resources</a>
    <a href="/settings" class="text-slate-600 hover:text-slate-900 dark:text-slate-400 dark:hover:text-white">Settings</a>
  </div>
</nav>

<%!-- Navbar with user menu --%>
<nav class="flex items-center justify-between px-6 py-4 bg-white dark:bg-slate-900 border-b border-slate-200 dark:border-slate-700">
  <div class="flex-1">
    <a href="/" class="text-xl font-bold text-slate-900 dark:text-white">My App</a>
  </div>
  <div class="flex items-center gap-4">
    <div class="relative" x-data="{ open: false }">
      <button @click="open = !open" class="w-10 h-10 rounded-full bg-slate-600 text-white flex items-center justify-center text-sm font-medium">
        JD
      </button>
      <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-48 bg-white dark:bg-slate-800 rounded-lg shadow-lg border border-slate-200 dark:border-slate-700 py-1">
        <a href="/profile" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-700">Profile</a>
        <a href="/settings" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-700">Settings</a>
        <a href="/logout" class="block px-4 py-2 text-sm text-slate-700 hover:bg-slate-100 dark:text-slate-300 dark:hover:bg-slate-700">Logout</a>
      </div>
    </div>
  </div>
</nav>


<%!-- ========================================
     SIDEBAR LAYOUT (Project Pattern)
     ======================================== --%>

<%!-- Fixed sidebar (actual project pattern) --%>
<div class="flex h-screen">
  <%!-- Sidebar --%>
  <aside class="w-80 border-r border-slate-200 dark:border-slate-700 bg-white dark:bg-slate-900 flex flex-col">
